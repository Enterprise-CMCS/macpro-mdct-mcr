{
  "path": "/mcpar/program-information/point-of-contact",
  "intro": {
    "section": "Section A: Program Information",
    "subsection": "Point of Contact",
    "info": [
      {
        "type": "text",
        "content": "Who should CMS contact with questions regarding information reported in the MCPAR? States that do not wish to list a specific individual on the report are encouraged to use a department or program-wide email address that will allow anyone with questions to quickly reach someone who can provide answers."
      }
    ]
  },
  "form": {
    "id": "apoc",
    "options": {
      "mode": "onChange"
    },
    "fields": [
      {
        "id": "apoc-a1",
        "type": "text",
        "hydrate": "stateName",
        "props": {
          "label": "A.1 State name",
          "hint": [
            {
              "type": "text",
              "as": "span",
              "content": "Auto-populated from your account profile."
            }
          ],
          "disabled": true
        }
      },
      {
        "id": "apoc-a2a",
        "type": "text",
        "props": {
          "label": "A.2a Contact name",
          "hint": [
            {
              "type": "text",
              "as": "span",
              "content": "First and last name of the contact person."
            }
          ]
        }
      },
      {
        "id": "apoc-a2b",
        "type": "text",
        "props": {
          "label": "A.2b Contact email address",
          "hint": [
            {
              "type": "text",
              "as": "span",
              "content": "Enter email address."
            }
          ]
        }
      },
      {
        "id": "apoc-a3a",
        "type": "text",
        "props": {
          "label": "A.3a Submitter name",
          "hint": [
            {
              "type": "text",
              "as": "span",
              "content": "Auto-populated from your account profile. Correct if needed."
            }
          ]
        }
      },
      {
        "id": "apoc-a3b",
        "type": "text",
        "props": {
          "label": "A.3b Submitter email address",
          "hint": [
            {
              "type": "text",
              "as": "span",
              "content": "Auto-populated from your account profile. Correct if needed."
            }
          ]
        }
      },
      {
        "id": "apoc-a4",
        "type": "date",
        "hydrate": "reportSubmissionDate",
        "props": {
          "label": "A.4 Date of report submission",
          "hint": [
            {
              "type": "text",
              "as": "span",
              "content": "CMS receives this date upon submission of this MCPAR report."
            }
          ],
          "disabled": true
        }
      }
    ]
  }
}
